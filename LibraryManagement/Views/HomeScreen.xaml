<UserControl x:Class="LibraryManagement.Views.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagement.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"  Background="#FFF0F0F0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridForNewBooks" Grid.Row="1" Grid.Column="0" Margin="10 0 5 30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image Grid.Column="1" Grid.Row="0" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/4.png" Stretch="Fill"/>
            <Image Grid.Column="2" Grid.Row="0" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/2.png" Stretch="Fill"/>
            <Image Grid.Column="3" Grid.Row="0" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/1.jpg" Stretch="Fill"/>
            <Image Grid.Column="1" Grid.Row="1" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/1.jpg" Stretch="Fill"/>
            <Image Grid.Column="2" Grid.Row="1" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/2.png" Stretch="Fill"/>
            <Image Grid.Column="3" Grid.Row="1" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/3.jpg" Stretch="Fill"/>
            <Image Grid.Column="1" Grid.Row="2" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/4.png" Stretch="Fill"/>
            <Image Grid.Column="2" Grid.Row="2" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/4.png" Stretch="Fill"/>
            <Image Grid.Column="3" Grid.Row="2" Width="Auto" Height="Auto" Margin="5 10" Source="/Assets/1.jpg" Stretch="Fill"/>
            <materialDesign:PackIcon Kind="ArrowLeftDropCircle" Grid.Column="0" Grid.RowSpan="3"
                                     Width="Auto" Height="Auto"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
            <materialDesign:PackIcon Kind="ArrowRightDropCircle" Grid.Column="4" Grid.RowSpan="3"
                                     Width="Auto" Height="Auto"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
        </Grid>

        <Label Grid.Row="0" Grid.Column="0" Content="SÁCH MỚI" HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontWeight="Bold" FontStyle="Italic" Foreground="#DD000000" FontSize="22"/>

        <Grid x:Name="gridForButton" Grid.Row="1" Grid.Column="1" Margin="10,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Height="Auto" Width="Auto" Background="#FFF39C11" BorderBrush="{x:Null}" Margin="10" HorizontalContentAlignment="Left" Click="ButtonBorrowBook_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="BookmarkPlus" Grid.Column="0" Width="Auto" Height="Auto"/>
                    <TextBlock Grid.Column="1" Text="Mượn sách" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="10"/>
                </Grid>
            </Button>
            <Button Click="ButtonReturnBook_Click" Grid.Column="1" Grid.Row="0" Height="Auto" Width="Auto" Background="#FF32AC26" BorderBrush="{x:Null}"  Margin="10" HorizontalContentAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="Trả sách" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="10"/>
                    <materialDesign:PackIcon Kind="History" Grid.Column="0" Width="Auto" Height="Auto"/>
                </Grid>
            </Button>
            <Button Click="ButtonCollectFine_Click" Grid.Column="1" Grid.Row="1" Height="Auto" Width="Auto" Background="#FFE6001F" BorderBrush="{x:Null}"  Margin="10" HorizontalContentAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="Phạt" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="10"/>
                    <materialDesign:PackIcon Kind="CloseOctagonOutline" Grid.Column="0" Width="Auto" Height="Auto"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</UserControl>
