<UserControl x:Class="LibraryManagement.Views.BookScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagement.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gidForInfo" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Thông tin cơ bản" HorizontalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Background="{x:Null}" Foreground="#DD000000" FontSize="22"/>
            <Grid Grid.Row="1" x:Name="gidForNomalInfo">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Stretch="Fill" Source="/Assets/3.jpg" Margin="10"/>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Mã sách" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Foreground="#DD000000" FontSize="20"/>
                    <Label Grid.Row="1" Content="Tên sách" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Foreground="#DD000000" FontSize="20"/>
                    <Label Grid.Row="2" Content="NXB" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Foreground="#DD000000" FontSize="20"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Background="#FFE2DADA" Margin="10 20" Height="Auto" FontSize="20"/>
                    <Label Grid.Row="1" Background="#FFE2DADA" Margin="10 20" Height="Auto" FontSize="20"/>
                    <Label Grid.Row="2" Background="#FFE2DADA" Margin="10 20" Height="Auto" FontSize="20"/>
                </Grid>
            </Grid>
            <Label Grid.Row="2" Content="Thông tin gì gì gì đó " HorizontalAlignment="Center" FontStyle="Italic" Background="{x:Null}" Foreground="#DD000000" FontSize="22" FontWeight="Bold"/>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Số lượng mượn" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Foreground="#DD000000" FontSize="20" Margin="10"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Số lượng còn" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" Foreground="#DD000000" FontSize="20" Margin="10"/>
                <Label Grid.Row="0" Grid.Column="1" Height="Auto" Background="#FFE2DADA" FontSize="20" Margin="10 20"/>
                <Label Grid.Row="1" Grid.Column="1" Height="Auto" Background="#FFE2DADA" FontSize="20" Margin="10 20"/>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Background="#FFF39C11" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="ContentDuplicate" Width="Auto" Height="Auto" VerticalAlignment="Center"/>
                        <TextBlock Text="Cập nhật sách" Margin="10" VerticalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="0" Background="#FFE6001F" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="DeleteForever" Width="Auto" Height="Auto" VerticalAlignment="Center"/>
                        <TextBlock Text="Xóa" Margin="10" VerticalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="0" Grid.Row="1" Background="#FFF39C11" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Adjust" Width="Auto" Height="Auto" VerticalAlignment="Center"/>
                        <TextBlock Text="Thêm mới" Margin="10" VerticalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Grid.Row="1" Background="#FFE6001F" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Close" Width="Auto" Height="Auto" VerticalAlignment="Center"/>
                        <TextBlock Text="Ngừng cho mượn" Margin="10" VerticalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Tìm kiếm sách" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontStyle="Italic" Background="{x:Null}" Foreground="#DD000000" FontSize="22"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Grid.Column="0" Kind="Undo" Background="Black" Width="Auto" Height="Auto" Foreground="White" Margin="10" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Background="#FFC0D4D4" TextWrapping="Wrap" Height="Auto" Margin="10"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Grid.Column="0" Kind="ArrowLeftDropCircle" VerticalAlignment="Center" Width="Auto" Height="Auto" Margin="10"/>
                <materialDesign:PackIcon Grid.Column="2" Kind="ArrowRightDropCircle" VerticalAlignment="Center" Width="Auto" Height="Auto" Margin="10"/>
                <Grid Grid.Column="1" Margin="10 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Column="0" Grid.Row="0" Source="/Assets/4.png" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="1" Grid.Row="0" Source="/Assets/2.png" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="2" Grid.Row="0" Source="/Assets/1.jpg" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="0" Grid.Row="1" Source="/Assets/1.jpg" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="1" Grid.Row="1" Source="/Assets/2.png" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="2" Grid.Row="1" Source="/Assets/3.jpg" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="0" Grid.Row="2" Source="/Assets/4.png" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="1" Grid.Row="2" Source="/Assets/4.png" Stretch="Fill" Margin="5"/>
                    <Image Grid.Column="2" Grid.Row="2" Source="/Assets/1.jpg" Stretch="Fill" Margin="5"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
