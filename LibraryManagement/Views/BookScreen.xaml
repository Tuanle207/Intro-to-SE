                <Label Grid.Row="1" Grid.Column="1" Height="Auto" Background="#FFDAE0E9" FontSize="20" Margin="10 20"/>
            </Grid>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Button Command="{Binding EditBookCommand}" Height ="Auto" Grid.Column="0" Grid.Row="0" Background="#FF2D5D9F" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" Margin="10">
