        <Grid Grid.Column="1" Margin="10" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
               
                <RowDefinition Height="1*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid Grid.Column="1" Background="#FFC0D4D4" Margin="10" Height="Auto">
                    <TextBlock Margin="10" Text="Nhập tên sách..." FontSize="16"
                        Foreground="#000"
                        Visibility="{Binding ElementName=SearchBook, Path=Text.IsEmpty,
                                  Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBox Name="SearchBook" Background="Transparent" Margin="10" FontSize="16" BorderBrush="Red" Text="{Binding BookSearchKeyword, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <!--<TextBlock Margin="10,10,10,9.8" Text="Nhập tên sách..." FontSize="16"
                    Foreground="#000"
                    Visibility="{Binding ElementName=BookSearchKeyword, Path=Text.IsEmpty,
                              Converter={StaticResource BooleanToVisibilityConverter}}" Grid.ColumnSpan="2" />
                <TextBox Name="SearchBook" Background="Transparent" Margin="10,10,10,9.8" FontSize="16" BorderBrush="Red" Text="{Binding ReaderSearchKeyword, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"/>-->
            </Grid>
            <materialDesign:Card Grid.Row="1" Grid.Column="0" Background="#FFDAE0E9" Margin="10,10,10,15" BorderThickness="0" VerticalAlignment="Stretch">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="ListDisplayBook" ItemsSource="{Binding ListBook}"  SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" >
                        <ListView.View >
                            <GridView>
                                <GridViewColumn Header="Mã số" DisplayMemberBinding="{Binding idBook}"></GridViewColumn>
                                <GridViewColumn Header="Tên sách" DisplayMemberBinding="{Binding nameBook}"></GridViewColumn>
                                <GridViewColumn Header="Thể loại" DisplayMemberBinding="{Binding Category.nameCategory}"></GridViewColumn>
                                <GridViewColumn Header="NXB" DisplayMemberBinding="{Binding Publisher.namePublisher}"></GridViewColumn>
                                <GridViewColumn Header="Tác giả" DisplayMemberBinding="{Binding Authors, Converter={StaticResource AuthorsConverter}}"></GridViewColumn>
                                <GridViewColumn Header="Ngày XB" DisplayMemberBinding="{Binding dateManufacture.Date}"></GridViewColumn>
                                <GridViewColumn Header="Ngày nhập" DisplayMemberBinding="{Binding dateAddBook.Date}"></GridViewColumn>
                                <GridViewColumn Header="Giá" DisplayMemberBinding="{Binding price}"></GridViewColumn>
                                <GridViewColumn Header="Trạng thái" DisplayMemberBinding="{Binding statusBook}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
            </materialDesign:Card>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Horizontal" Margin="50 0 0 0">
                        <Button Command="{Binding MoveToPreviousBooksPage}" Padding="10 0 10 2" Margin="20,33,20,33.4">&lt;</Button>
                        <TextBlock Text="{Binding ListBook.CurrentPage}"></TextBlock>
                        <TextBlock>/</TextBlock>
                        <TextBlock Text="{Binding ListBook.PageCount}"></TextBlock>
                        <Button Command="{Binding MoveToNextBooksPage}" Padding="10 0 10 2" Margin="20,33,0,33.4" Content="&gt;"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
